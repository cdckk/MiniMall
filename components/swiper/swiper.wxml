<!--components/swiper/swiper.wxml-->
<swiper circular="true"
        autoplay="true"
        interval="2000"
        duration="300"
        indicator-dots="true"
        indicator-active-dots="#ff5777">
  <block wx:for="{{banners}}" wx:key="item">
    <swiper-item>
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>